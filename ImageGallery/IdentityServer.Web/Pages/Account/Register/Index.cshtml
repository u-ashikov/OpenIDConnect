@page
@model IdentityServer.Web.Pages.Account.Register.IndexModel

<div>
        <div class="page-header">
            <h1>User Registration</h1>
        </div>

        <partial name="_ValidationSummary" />

        <div class="row">
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">User Registration</h3>
                    </div>
                    <div class="panel-body">
                        <form asp-route="Register">
                            <input type="hidden" asp-for="InputModel.ReturnUrl" />
                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="InputModel.UserName"></label>
                                    <input class="form-control" placeholder="Username" asp-for="InputModel.UserName" autofocus>
                                </div>
                                <div class="form-group">
                                    <label asp-for="InputModel.Password"></label>
                                    <input type="password" class="form-control" placeholder="Password"
                                       asp-for="InputModel.Password" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <label asp-for="InputModel.Email"></label>
                                    <input class="form-control" placeholder="Email" asp-for="InputModel.Email">
                                </div>
                                <div class="form-group">
                                    <label asp-for="InputModel.GivenName"></label>
                                    <input class="form-control" placeholder="Given name" asp-for="InputModel.GivenName">
                                </div>
                                <div class="form-group">
                                    <label asp-for="InputModel.FamilyName"></label>
                                    <input class="form-control" placeholder="Family name" asp-for="InputModel.FamilyName">
                                </div>
                                <div class="form-group">
                                    <label asp-for="InputModel.Country"></label>
                                    <select class="form-control" asp-for="InputModel.Country" asp-items="Model.InputModel.CountryCodes"></select>
                                </div>

                                <div class="form-group">
                                    <button class="btn btn-primary">Register</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
